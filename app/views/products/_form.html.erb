<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  

    <h3>Parts</h3>
    <div id="parts">
      <%= f.fields_for :parts do |part| %>
        <%= render 'part_fields', f: part %>
        <div class="links">
          <%= link_to_add_association 'add part', f, :parts %>
        </div>
      <% end %>
    </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
