<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
  
  <% if @product.parts.any? %>
    <h3>Parts</h3>
    <ul>
    <% @product.parts.each do |part| %>
      <li><%= part.name %></li>
    <% end %>
    </ul>
  <% end %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
